<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style-admin.css">
    <script src="https://kit.fontawesome.com/yourcode.js" crossorigin="anonymous"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Admin</title>
</head>
<body>
  <div class="sidebar">
    <div class="logo-details">
      <i class="fa fa-user" aria-hidden="true"></i>
      <span class="logo_name">Admin</span>
    </div>
      <ul class="nav-links">
        <li>
          <a href="/admin">
              <i class="fa fa-bars" aria-hidden="true"></i>
            <span class="links_name">Dashboard</span>
          </a>
        </li>
        <li>
          <a href="/admin/members"  class="active">
              <i class="fa fa-users" aria-hidden="true"></i>
            <span class="links_name">Members</span>
          </a>
        </li>
        <li>
          <a href="/admin/attendance">
              <i class="fa fa-check" aria-hidden="true"></i>
            <span class="links_name">Attendance</span>
          </a>
        </li>
      </ul>
  </div>
    <section class="home-section">
      <nav>
        <div class="sidebar-button">
          <i class='bx bx-menu sidebarBtn'></i>
          <span class="dashboard">Members</span>
        </div>

      </nav>

      <div class="home-content">
        <div class="option"><%=Member[0].firstName%> <%=Member[0].lastName%></div>
       <div class="info-container">

        <fieldset class="personal-info">
            <legend>Personal information</legend>
<div class="detail"><label for="">Name: </label><%=Member[0].firstName%> <%=Member[0].lastName%></span></div>
<div class="detail"><label for="">Gender: </label><span><%=Member[0].gender%></span></div>
<div class="detail"><label for="">School ID: </label><span><%=Member[0].schoolId%></span></div>
<div class="detail"><label for="">Section: </label><span><%=Member[0].section%></span></div>
<div class="detail"><label for=""><i class="fa fa-phone" aria-hidden="true"></i> </label><span><%=Member[0].phoneNumber%></span></div>
<div class="detail"><label for=""><i class="fa fa-envelope" aria-hidden="true"></i> </label><span><%=Member[0].email%></span></div>


        </fieldset>

        <fieldset class="club-info">
            <legend>Club information</legend>
            <!-- <div class="detail"><label for="">Position: </label>Secretary</span></div> -->
            <div class="detail"><label for="">Joined date: </label><%=Member[0].joinedDate.toDateString()%></span></div>
            <div class="detail"><label for="">Interest: </label><span><%Member[0].interests.forEach(function(interest){ %>
              
              <%=interest%> ,

            <% }) %>
            </span></div>
            <div class="detail"><label for="">Skill level: </label><span><%=Member[0].skillLevel%></span></div>
            <div class="detail"><label for="">Total attendance: </label><span><%=Member[0].attendances.length%></span></div>
            <!-- <div class="detail"><label for="">Special participations: </label><span>Exhibition, Club website</span></div> -->


        </fieldset>
       </div>
      
    </section>
    <script>
     let sidebar = document.querySelector(".sidebar");
  let sidebarBtn = document.querySelector(".sidebarBtn");
  sidebarBtn.onclick = function() {
    sidebar.classList.toggle("active");
    if(sidebar.classList.contains("active")){
    sidebarBtn.classList.replace("bx-menu" ,"bx-menu-alt-right");
  }else
    sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
  }
   </script>
  </body>
</html>