    <title>News</title>
</head>
<body>
  <main>
    <div class="big-wrapper light">
      <img src="images/shape.png" alt="" class="shape" />

      <header class="fixed-top">
        <div class="container fixed-top">
          <div class="logo">
            <h3>SMU-CSC</h3>
          </div>

          <div class="links">
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/news">News</a></li>
              <li><a href="/events">Events</a></li>
              <li><a href="/gallery">Gallery</a></li>
              <li><a href="/termsAndConditions" class="btn">Register</a></li>
            </ul>
          </div>

          <div class="overlay"></div>

          <div class="hamburger-menu">
            <div class="bar"></div>
          </div>
        </div>
      </header>

          
            <div class="big-title-new" style="padding-top: 5rem;">
              <h1>News</h1>
            </div>
            <section class="news-section">
              <div class="section-content news">
                  <div class="news-cards">
                      
                   <% News.forEach(function(news){ %>

                    <div class="news-card">
                      <div class="image-section">
                          <img src="<%=news.imageURL%>" alt="">
                      </div>
                      <div class="article">
                          <h4><%=news.title%></h4>
                          <p><%=news.content%></p>
                      </div>
                     <!--<div class="news-view">
                          <a href="" class="button">Read More</a>
                      </div>--> 
                      <div class="posted-date">
                          <p>Posted on <%=news.date.toDateString()%></p>
                      </div>
                  </div>

                    <% }) %>
                      
              
                    
              
              
                  </div>
              </div>
              
                  </section>
          

          
            
          
       

      <div class="bottom-area">
        <div class="container">
          <button class="toggle-btn mode">
            <i class="far fa-moon"></i>
            <i class="far fa-sun"></i>
          </button>
        </div>
      </div>

    </div>
  </main>
        
    



